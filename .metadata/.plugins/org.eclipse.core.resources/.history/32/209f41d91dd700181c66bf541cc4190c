package loopAssignments;

import java.util.Scanner;

public class AddingNumbers {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		
		
		
		//calculating sum of numbers between 0 and a given number
			
		int minUser = 0;
		int min = minUser;
		int max;
		Scanner input = new Scanner(System.in);
		
		System.out.println("Enter your min : ");
		minUser = input.nextInt();
		System.out.println("Enter your max : ");
		max = input.nextInt();
		
		for(;min <= max;) {

			int sum = min +=(min++);
			System.out.println("Sum of numbers between "+minUser+" and "+max+" is "+sum);
		}

	}

}
